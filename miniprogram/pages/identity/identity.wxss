.title{
  width: 50%;
  height: 150rpx;
  margin: 0 auto;
  margin-top: -140rpx;
  margin-left: 170rpx;
  background-color: #3d3d5f;
  text-align: center;
  line-height: 150rpx;
  border: 1rpx black solid;
  border-radius: 0.5rem;
  color: white;
}
.parent{
  width: 100%;
  height: 500px;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%,-50%,0);

}
.left{
  width: 100%;
  height: 700px;
  background-color: #f8c400;
  transform: skewY(-50deg) translate(-150px,-450px);
}
.right{
  width: 100%;
  height: 700px;
  background-color: #07883f;
  transform: skewY(-50deg) translate(50px,-430px);
}
.user{
  float: left;
  margin-top: 400px;
  margin-left: 200px;
  color: white;
  font-size: 50rpx;
  transform: skewY(50deg)
}
.volunteer{
  float: right;
  margin-top: 150px;
  margin-right: 130px;
  color: white;
  font-size: 50rpx;
  transform: skewY(50deg)
}