/* pages/look/look.wxss */
.body{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #f2f2f2;
}
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 120rpx;
  line-height: 120rpx;
  font-weight: bold;
}
.swiper-tab-item{
  display: inline-block;
  width: 49%;
  color:rgb(100, 91, 91);
}
.active{
  color:#60A7E9;
  border-bottom: 4rpx solid rgb(84, 160, 231);
}

.jie{
  width:92%;
  margin:0 auto;
  margin-top:0.5rem;
  background:white;
  padding:0.5rem;
  font:1rem;
  border:1rpx solid white;
  border-radius:1rem;
}

.btn{ 
  width: 98%;
  display:flex;
  justify-content:space-around;
  font:5rpx;  
}

.btn button{
  margin-top:1rem;
  width: 30%;
  height: 55rpx;
  background-color: #0082cf;
  border-radius: 2rem;
  color: white;
  line-height: 55rpx;
}

.btn1{
  margin-top:1rem;
  width: 23%;
  height: 55rpx;
  background-color: #0082cf;
  border-radius: 2rem;
  color: white;
  line-height: 55rpx;
  font-size: 20rpx;
}
