.tit {
  width: 50%;
  height: 150rpx;
  margin: 0 auto;
  margin-top: 100rpx;
  background-color: black;
  border: 1rpx black solid;
  border-radius: 0.5rem;
}

.title {
  width: 50%;
  height: 150rpx;
  margin: 0 auto;
  margin-top: -140rpx;
  margin-left: 170rpx;
  background-color: #3d3d5f;
  text-align: center;
  line-height: 150rpx;
  border: 1rpx black solid;
  border-radius: 0.5rem;
  color: white;
}

.parent {
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.left {
  width: 100%;
  height: 2000rpx;
  background-color: #f8c400;
  transform: skewY(-50deg) translate(-180rpx, -1780rpx);
}

.right {
  width: 100%;
  height: 2000rpx;
  background-color: #07883f;
  transform: skewY(-50deg) translate(40rpx, -1760rpx);
}

.user {
  float: left;
  margin-top: 1710rpx;
  margin-left: 200rpx;
  color: white;
  font-size: 50rpx;
  transform: skewY(50deg);
}

.volunteer {
  float: right;
  margin-top: 200rpx;
  margin-right: 100rpx;
  color: white;
  font-size: 50rpx;
  transform: skewY(50deg);
}
.main{
  overflow: hidden;
  width: 100%;
  height: 100vh;
}
.admin{
  position:absolute;
  top: 80%;
  right:5%;
  color: #1cd66c;
}